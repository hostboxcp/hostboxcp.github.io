[Unit]
Description=HBCPD Daemon
After=network.target

[Service]
User=root
Group=root
ExecStart=/usr/local/hbcp/hbcpd
Restart=on-failure

# Our service will notify systemd once it is up and running
Type=idle

# Logging
StandardOutput=append:/var/log/hostboxcp/hbcpd.log
StandardError=append:/var/log/hostboxcp/hbcpd.log

[Install]
WantedBy=multi-user.target